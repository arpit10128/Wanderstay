<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <br>
                <h3>Create a New Listing</h3>
                <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div>
                        <label for="title" class="form-label">Title</label>
                        <input type="text" required name="listing[title]" placeholder="Enter title" class="form-control">
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                          <div class="invalid-feedback">
                            Field required!
                          </div>
                    </div>
                    <br>
                    <div>
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" required placeholder="enter description"
                            class="form-control"></textarea>
                            <div class="invalid-feedback">
                                field required!
                              </div>
                              <div class="valid-feedback">
                                Looks good!
                              </div>
                    </div>
                 <br>
                    <div>
                        <label for="image" class="form-label">Upload image</label>
                        <input type="file" name="listing[image]" class="form-control" required>
                        
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" required name="listing[price]" placeholder="Enter price" class="form-control">
                            <div class="invalid-feedback">
                                field required!
                              </div>
                        </div>

                        <div class="col-md-8">
                            <label for="location" class="form-label">Location</label>
                            <input type="text" required name="listing[location]" placeholder="Enter location"
                                class="form-control">
                                <div class="invalid-feedback">
                                    field required!
                                  </div>
                        </div>
                    </div>
                    <br>
                    <div>
                        <label for="country" class="form-label">Country</label>
                        <input type="text" required name="listing[country]" placeholder="Enter country" class="form-control">
                          <div class="invalid-feedback">
                            field required!
                          </div>
                    </div>
                    <br>
                    <button class="btn btn-dark add-btn">Add</button>
                    <br><br>
                </form>
            </div>
        </div>
    </body>